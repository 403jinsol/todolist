<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteBlack"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_ver_margin"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginEnd="20dp"
            android:scaleType="center"
            android:src="@drawable/ic_calender_prev"
            app:tint="@color/blackWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/default_hor_margin"
            android:text="@string/group"
            android:textColor="@color/blackWhite"
            android:textSize="@dimen/toolbar_font_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/addGroup"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/default_hor_margin"
            android:scaleType="center"
            android:src="@drawable/ic_plus"
            app:tint="@color/blackWhite" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginBottom="@dimen/default_ver_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_group"
            android:textColor="@color/blackWhite"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/normalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/normal"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/group_add_title_font_size"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/proceedGroupRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/big_ver_margin" />

        <TextView
            android:id="@+id/completeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete_group"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/group_add_title_font_size"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/completeGroupRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/big_ver_margin" />

    </LinearLayout>

</LinearLayout>