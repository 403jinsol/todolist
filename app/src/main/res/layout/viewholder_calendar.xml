<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_hor_margin"
    android:layout_marginTop="@dimen/default_ver_margin"
    android:layout_marginBottom="@dimen/todo_small_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/todo_small_margin"
            android:src="@drawable/ic_user"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/todo_small_margin"
            android:src="@drawable/ic_add"
            app:tint="@color/black" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/me"
        android:textColor="@color/black"
        android:textSize="@dimen/user_name_font_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yearMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_ver_margin"
            android:text="@string/dummy"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_check"
            android:layout_marginEnd="@dimen/todo_small_margin"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_hor_margin"
            android:src="@drawable/ic_calender_prev"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calender_next"
            app:tint="@color/black" />

        <LinearLayout
            android:id="@+id/monthWeekContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/todo_small_margin">

            <TextView
                android:id="@+id/monthWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/todo_small_margin"
                android:text="@string/month"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calender_up" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_ver_margin"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/monday"
            android:textSize="@dimen/calendar_date_font_size" />

        <TextView
            android:id="@+id/day2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tuesday"
            android:textSize="@dimen/calendar_date_font_size" />

        <TextView
            android:id="@+id/day3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wednesday"
            android:textSize="@dimen/calendar_date_font_size" />

        <TextView
            android:id="@+id/day4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/thursday"
            android:textSize="@dimen/calendar_date_font_size" />

        <TextView
            android:id="@+id/day5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/friday"
            android:textSize="@dimen/calendar_date_font_size" />

        <TextView
            android:id="@+id/day6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/saturday"
            android:textSize="@dimen/calendar_date_font_size" />

        <TextView
            android:id="@+id/day7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sunday"
            android:textSize="@dimen/calendar_date_font_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week1ImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week1TextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_date_ver_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week2ImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week2TextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_date_ver_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week3ImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week3TextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_date_ver_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week4ImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week4TextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_date_ver_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week5ImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week5TextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_date_ver_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week6ImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/week6TextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_date_ver_margin"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>