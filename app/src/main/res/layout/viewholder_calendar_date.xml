<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dateContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/calendar_date_ver_margin"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/todo_small_margin">

        <ImageView
            android:id="@+id/dateIcon"
            android:layout_width="@dimen/calendar_icon__size"
            android:layout_height="@dimen/calendar_icon__size"
            android:layout_gravity="center"
            android:src="@drawable/ic_clover"
            app:tint="@color/calendar_icon_default" />

        <ImageView
            android:id="@+id/checkIcon"
            android:layout_width="@dimen/calendar_icon__size"
            android:layout_height="@dimen/calendar_icon__size"
            android:src="@drawable/ic_check_checked"
            android:visibility="invisible"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/number"
            style="@style/text_default"
            android:layout_gravity="center"
            android:text="@string/dummyNumber" />

    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/calendar_font_default"
        android:textSize="@dimen/calendar_date_font_size"
        android:textStyle="bold" />

    <View
        android:id="@+id/underline"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/blackWhite"
        android:visibility="invisible" />

</LinearLayout>