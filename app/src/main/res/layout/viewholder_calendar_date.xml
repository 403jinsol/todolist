<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/calendar_date_ver_margin"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/calendar_icon__size"
        android:layout_height="@dimen/calendar_icon__size"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:src="@drawable/ic_clover"
        app:tint="@color/calendar_icon_default" />

    <TextView
        android:id="@+id/text"
        android:textColor="@color/calendar_font_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/calendar_date_font_size"
        android:textStyle="bold" />

</LinearLayout>