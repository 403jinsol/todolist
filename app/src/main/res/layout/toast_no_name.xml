<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/default_hor_margin"
    android:background="@drawable/round_toast"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/toast_hor_padding">

    <TextView
        android:id="@+id/toastText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:gravity="center"
        android:text="@string/toast_no_name"
        android:textColor="@color/whiteBlack" />

</LinearLayout>