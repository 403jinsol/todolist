<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBlack"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    tools:ignore="ContentDescription">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginEnd="20dp"
            android:scaleType="center"
            android:src="@drawable/ic_calender_prev"
            app:tint="@color/blackWhite" />

        <TextView
            style="@style/text_default"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/default_hor_margin"
            android:text="@string/theme"
            android:textSize="@dimen/toolbar_font_size"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/systemContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height_size"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_default"
            android:text="@string/system" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/todo_group_background" />

    <LinearLayout
        android:id="@+id/lightContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height_size"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_default"
            android:text="@string/light" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/todo_group_background" />

    <LinearLayout
        android:id="@+id/darkContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height_size"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_default"
            android:text="@string/dark" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/todo_group_background" />

</LinearLayout>