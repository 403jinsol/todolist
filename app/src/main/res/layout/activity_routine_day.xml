<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBlack"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    tools:ignore="ContentDescription, UseCompoundDrawables">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_marginEnd="20dp"
            android:scaleType="center"
            android:src="@drawable/ic_calender_prev"
            app:tint="@color/blackWhite" />

        <TextView
            style="@style/text_toolbar_title"
            android:layout_gravity="center"
            android:text="@string/day" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/mondayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mondayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_radio_uncheck" />

        <TextView
            style="@style/text_default"
            android:text="@string/monday_long"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        style="@style/underline"
        android:layout_marginVertical="@dimen/default_ver_margin" />

    <LinearLayout
        android:id="@+id/tuesdayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuesdayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_radio_uncheck" />

        <TextView
            style="@style/text_default"
            android:text="@string/tuesday_long"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        style="@style/underline"
        android:layout_marginVertical="@dimen/default_ver_margin" />

    <LinearLayout
        android:id="@+id/wednesdayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wednesdayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_radio_uncheck"
            app:tint="@color/blackWhite" />

        <TextView
            style="@style/text_default"
            android:text="@string/wednesday_long"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        style="@style/underline"
        android:layout_marginVertical="@dimen/default_ver_margin" />

    <LinearLayout
        android:id="@+id/thursdayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thursdayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_radio_uncheck" />

        <TextView
            style="@style/text_default"
            android:text="@string/thursday_long"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        style="@style/underline"
        android:layout_marginVertical="@dimen/default_ver_margin" />

    <LinearLayout
        android:id="@+id/fridayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fridayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_radio_uncheck" />

        <TextView
            style="@style/text_default"
            android:text="@string/friday_long"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        style="@style/underline"
        android:layout_marginVertical="@dimen/default_ver_margin" />

    <LinearLayout
        android:id="@+id/saturdayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/saturdayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_radio_uncheck" />

        <TextView
            style="@style/text_default"
            android:text="@string/saturday_long"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        style="@style/underline"
        android:layout_marginVertical="@dimen/default_ver_margin" />

    <LinearLayout
        android:id="@+id/sundayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginVertical="@dimen/default_ver_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sundayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_radio_uncheck" />

        <TextView
            style="@style/text_default"
            android:text="@string/sunday_long"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        style="@style/underline"
        android:layout_marginVertical="@dimen/default_ver_margin" />

</LinearLayout>