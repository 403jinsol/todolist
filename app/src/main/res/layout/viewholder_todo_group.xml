<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/default_ver_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/todo_group_hor_padding"
        android:paddingVertical="@dimen/todo_group_ver_padding">

        <ImageView
            android:layout_width="@dimen/todo_group_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_todo_group" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy"
            android:textSize="@dimen/todo_group_font_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="@dimen/todo_group_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/todo_small_margin"
            android:src="@drawable/ic_todo_plus" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/todo_small_margin" />

    <LinearLayout
        android:id="@+id/editContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_hor_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/todoIcon"
            android:layout_width="@dimen/todo_item_size"
            android:layout_height="@dimen/todo_item_size"
            android:layout_marginEnd="@dimen/default_ver_margin"
            android:src="@drawable/ic_clover"
            app:tint="@color/todo_icon_default" />

        <EditText
            android:id="@+id/todoEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/input"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="text"
            android:textSize="@dimen/todo_item_font_size"/>

        <ImageView
            android:id="@+id/moreIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_todo_more" />

    </LinearLayout>

</LinearLayout>