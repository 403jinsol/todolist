<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/default_ver_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_hor_margin"
        android:layout_marginBottom="@dimen/todo_small_margin"
        android:background="@drawable/round"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/todo_group_hor_padding"
        android:paddingVertical="@dimen/todo_group_ver_padding">

        <ImageView
            android:layout_width="@dimen/todo_group_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/todo_small_margin"
            android:src="@drawable/ic_todo_group" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy"
            android:textSize="@dimen/todo_group_font_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="@dimen/todo_group_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/todo_small_margin"
            android:src="@drawable/ic_todo_plus" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" />

</LinearLayout>