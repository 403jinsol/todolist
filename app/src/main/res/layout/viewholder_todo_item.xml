<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_hor_margin"
    android:layout_marginVertical="@dimen/default_ver_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/todoIcon"
        android:layout_width="@dimen/todo_item_size"
        android:layout_height="@dimen/todo_item_size"
        android:layout_marginEnd="@dimen/todo_small_margin"
        android:src="@drawable/ic_todo_icon"
        app:tint="@color/todo_icon_default" />

    <TextView
        android:id="@+id/todoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy"
        android:textSize="@dimen/todo_item_font_size" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_todo_more" />

</LinearLayout>