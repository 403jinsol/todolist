<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/default_ver_margin"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/iconLine"
        android:layout_width="@dimen/color_icon_outline_size"
        android:layout_height="@dimen/color_icon_outline_size"
        android:layout_gravity="center"
        android:src="@drawable/ic_circle_line"
        android:visibility="invisible"
        app:tint="@color/calendar_font_default" />

    <ImageView
        android:id="@+id/colorIcon"
        android:layout_width="@dimen/color_icon_size"
        android:layout_height="@dimen/color_icon_size"
        android:layout_gravity="center"
        android:src="@drawable/ic_circle_fill" />

</FrameLayout>