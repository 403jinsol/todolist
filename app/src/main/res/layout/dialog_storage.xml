<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/round_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/default_hor_margin"
    android:paddingVertical="@dimen/big_ver_margin"
    tools:ignore="UseCompoundDrawables, ContentDescription">

    <TextView
        android:id="@+id/dlg_title"
        style="@style/text_default"
        android:layout_marginVertical="@dimen/big_ver_margin"
        android:text="@string/dummy"
        android:textSize="@dimen/complete_dialog_title_font_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/big_ver_margin"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/todo_dialog_icon_size"
                android:layout_height="@dimen/todo_dialog_icon_size"
                android:layout_marginBottom="@dimen/todo_small_margin"
                android:background="@drawable/background_circle"
                android:padding="@dimen/todo_dialog_icon_padding"
                android:src="@drawable/ic_edit" />

            <TextView
                style="@style/text_todo_dialog"
                android:text="@string/edit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/doToday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/todo_dialog_icon_size"
                android:layout_height="@dimen/todo_dialog_icon_size"
                android:layout_marginBottom="@dimen/todo_small_margin"
                android:background="@drawable/background_circle"
                android:padding="@dimen/todo_dialog_icon_padding"
                android:src="@drawable/ic_do_today" />

            <TextView
                style="@style/text_todo_dialog"
                android:text="@string/time_alarm" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/changeDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/todo_dialog_icon_size"
                android:layout_height="@dimen/todo_dialog_icon_size"
                android:layout_marginBottom="@dimen/todo_small_margin"
                android:background="@drawable/background_circle"
                android:padding="@dimen/todo_dialog_icon_padding"
                android:src="@drawable/ic_change_date" />

            <TextView
                style="@style/text_todo_dialog"
                android:text="@string/change_date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/todo_dialog_icon_size"
                android:layout_height="@dimen/todo_dialog_icon_size"
                android:layout_marginBottom="@dimen/todo_small_margin"
                android:background="@drawable/background_circle"
                android:padding="@dimen/todo_dialog_icon_padding"
                android:src="@drawable/ic_delete" />

            <TextView
                android:id="@+id/tomorrowText"
                style="@style/text_todo_dialog"
                android:text="@string/delete" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>