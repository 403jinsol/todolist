<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoList.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F5F5F5</item>
        <item name="colorPrimaryVariant">#40000000</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#40000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="dialogBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="text_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackWhite</item>
    </style>

    <style name="text_toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackWhite</item>
        <item name="android:textSize">@dimen/toolbar_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_todo_dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackWhite</item>
        <item name="android:textSize">@dimen/todo_dialog_content_font_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/todo_group_background</item>
    </style>

    <style name="settingSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>

    <style name="inquiryQuestion">
        <item name="android:layout_marginBottom">@dimen/todo_small_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackWhite</item>
        <item name="android:textSize">@dimen/inquiry_question_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inquiryAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackWhite</item>
        <item name="android:layout_marginStart">@dimen/default_hor_margin</item>
    </style>

    <color name="blackWhite">@color/black</color>
    <color name="whiteBlack">@color/white</color>
    <color name="dialog_background">@color/white</color>

    <color name="calendar_icon_default">@color/calendar_icon_light</color>
    <color name="todo_group_background">@color/todo_group_background_light</color>
    <color name="todo_group_stroke">@color/todo_group_stroke_light</color>
    <color name="todo_icon_default">@color/todo_icon_light</color>

    <color name="switch_track_on">@color/switch_track_on_light</color>
    <color name="switch_track_off">@color/switch_track_off_light</color>
</resources>